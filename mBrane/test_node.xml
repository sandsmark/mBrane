<NodeConfiguration application_configuration_file="C:\eric\work\mBrane\mBrane\test_application.xml">
	<Network sync_period="10000" bcast_timeout="1000">
		<!--sync_period: in ms; period at which sync signals are broadcast from the reference node-->
		<!--bcast_timeout: in ms; delay after which a node believes it is the reference node-->
		<Interfaces>
			<TCP shared_library="mBrane_tcp"/>
			<UDP shared_library="mBrane_udp"/>
			<Infiniband shared_object="mBrane_ib"/><!--MPI, Linux only-->
		</Interfaces>
		<Discovery interface="UDP" nic="eth0" port="10000"/>
		<Control interface="TCP" nic="eth0" port="10001"/>
		<Data interface="TCP" nic="eth0" port="10002"/>
		<Streams interface="TCP" nic="eth0" port="10003"/>
	</Network>
	<Nodes><!--SystemReady will be sent when all the nodes listed here are up and running; no need to list the local node (implicit)-->
		<!--ex: <Node hostname=""/> or <Node address=""/>-->
	</Nodes>
</NodeConfiguration>
